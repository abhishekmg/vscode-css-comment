{
  "name": "px-comment",
  "displayName": "rem-to-px-comment",
  "description": "",
  "version": "1.0.1",
  "publisher": "abhishekmg",
  "repository": {
    "type": "git",
    "url": "https://github.com/abhishekmg/vscode-css-comment"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "css",
    "styling",
    "px",
    "rem"
  ],
  "icon": "images/rem-to-px-comment-logo.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./extension.js",
  "contributes": {
    "keybindings": [
      {
          "command": "editor.emmet.action.incrementNumberByOne",
          "key": "ctrl+shift+i",
          "mac": "cmd+shift+i",
          "when": "config.remToPxComment.addKeyBoardShortcuts" 
      },
      {
        "command": "editor.emmet.action.incrementNumberByOneTenth",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "config.remToPxComment.addKeyBoardShortcuts" 
      },
      {
        "command": "editor.emmet.action.incrementNumberByTen",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "config.remToPxComment.addKeyBoardShortcuts" 
      },
      {
        "command": "editor.emmet.action.decrementNumberByOne",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "config.remToPxComment.addKeyBoardShortcuts" 
      },
      {
        "command": "editor.emmet.action.decrementNumberByOneTenth",
        "key": "ctrl+shift+z",
        "mac": "cmd+shift+z",
        "when": "config.remToPxComment.addKeyBoardShortcuts" 
      },
      {
        "command": "editor.emmet.action.decrementNumberByTen",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "config.remToPxComment.addKeyBoardShortcuts" 
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "Rem to Px comment configuration",
        "properties": {
          "remToPxComment.commentColor": {
            "type": "string",
            "default": "#36C210",
            "description": "Decoration color for the comment value"
          },
          "remToPxComment.remConversionValue": {
            "type": "number",
            "default": "16",
            "description": "value to convert px to rem, default is 16px"
          },
          "remToPxComment.convertToRemOrPx": {
            "type": "string",
            "default": "px",
            "enum": [
              "px",
              "rem"
            ],
            "description": "tell if conversion is from rem to px to the other way around"
          },
          "remToPxComment.addKeyBoardShortcuts": {
            "type": "boolean",
            "default": false
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version patch"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}